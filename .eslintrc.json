{
    "plugins": [
        "flowtype",
        "flow-vars",
        "flowtype-errors"
    ],
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:flowtype/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": false,
            "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "eqeqeq": "error",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "flowtype-errors/show-errors": 2,
        "flowtype/delimiter-dangle": [
            2,
            "only-multiline"
        ],
        "flowtype/semi": [2, "always"]
    },
    "settings": {
        "flowtype": {
        "onlyFilesWithFlowAnnotation": false
    }
  }
}